<!-- .slideshow-main -->
@section head{
   <meta name="description" content="TIP Society ร้านอาหารยอดนิยม ที่พักแสนสบายบรรยากาศดี Car Care ระดับคุณภาพ สถานเสริมความงามและสุขภาพชื่อดัง รวมทั้งกิจกรรมความสนุกอีกเพียบจากทิพยประกันภัย สมัครฟรี ไม่เสียค่าใช้จ่าย รับส่วนลดร้านค้า สะสมคะแนนแลกของรางวัล และสิทธิพิเศษ รับข่าวสาร สังคมที่ทิพยประกันภัยมอบให้คุณ" />
   <meta name="keywords" content="TIP Society,TipSociety, สิทธิพิเศษ,ทิพยประกันภัย,ประกันภัย, ร้านอาหาร, ที่พัก, Car Care, สถานเสริมความงาม" />

}
<div class="container carousel-container">
   <a href="#" class="carousel-prev"><i class="fas fa-angle-left"></i></a>
   <div class="carousel carousel-privilege">
      @foreach (var item in context.MerchantCategories.Where(w => w.Status == StatusType.Active).OrderBy(o => o.Index))
      {
         var title = item.CategoryName;
         if (!string.IsNullOrEmpty(item.RedWord))
         {
            title = item.RedWord.Replace("[", "<span class='text-red'>").Replace("]", "</span>");

         }
         <div class="carousel-item">
            <div class="carousel-image">
               <a href="@Url.Action("Privilege","Home", new { CategoryID = item.CategoryID})" class="carousel-image-link"><img src="@Url.Content(item.Url)"></a>
            </div><!-- .carousel-image -->
            <div class="carousel-body">
               <h3 class="carousel-title"><small>@Html.Raw(title)</small></h3><!-- .carousel-title -->
               <div class="carousel-content">
                  <p><small>@item.Description</small></p>
               </div><!-- .carousel-content -->
            </div><!-- .carousel-body -->
         </div><!-- .carousel-item -->
      }
   </div><!-- .carousel-privilege -->
   <a href="#" class="carousel-next"><i class="fas fa-angle-right"></i></a>
</div>
<div class="privilege jumbotron text-center">
   <div class="container">
      <h2 class="jumbotron-title">สิทธิ<span class="text-red">พิเศษ</span>ที่เหนือกว่า</h2>
      <ul class="item-list">
         <li class="item">
            <div class="icon"><img src="~/tip/img/icon-message.png"></div>
            <h4 class="text"><small>ที่ปรึกษาด้านการประกันภัย</small></h4>
         </li>
         <li class="item">
            <div class="icon"><img src="~/tip/img/icon-edit.png"></div>
            <h4 class="text"><small>TIP Shopping Center</small></h4>
         </li>
