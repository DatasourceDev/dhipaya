@model IEnumerable<Dhipaya.Models.NewsActivityGroup>
@inject Dhipaya.DAL.ChFrontContext context
@{
   ViewData["Title"] = "กลุ่มข่าวสารและกิจกรรม";
   Layout = "_LayoutTIP";
   var i = 1;
}
@functions
{
bool canDelete(int Id)
{
   bool retVal = true;

   return retVal;
}
}
<div class="profile-container">
   <div class="profile-information">
      <div class="container">
         <div class="profile-title-block">
            <div class="heading-wrapper">
               <h2 class="title"><small>กลุ่ม</small>ข่าวสาร<small>และ</small>กิจกรรม</h2>
               <div class="title-right">
                  <a href="@Url.Action("Create","NewsActivityGroup")" class="button button-blue">เพิ่มกลุ่มข่าวสารและกิจกรรม</a>
               </div>
            </div>

         </div><!-- .profile-title-block -->
         <div class="profile-block-with-bg">
            <div class="history-table">
               @foreach (var item in Model)
               {
                  <div class="history-table-container">
                     <div class="history-date"></div>
                     <div class="history-table-wrapper add-point">
                        <div class="history-detail">
                           <div class="history-detail-logo">

                           </div>
                           <div class="history-detail-text">
                              <a href="@Url.Action("Update", "NewsActivityGroup", new { id = item.ID })">@item.Name</a>
                           </div>
                        </div>

                        <div class="history-total-point">

                        </div>
                        <div class="history-point">
                           <a href="@Url.Action("Update", "NewsActivityGroup", new { id = item.ID })"
                              class="btn btn-link">
                              แก้ไข
                           </a>
                           @if (canDelete(item.ID))
                           {
                              <a href="@Url.Action("Delete", "NewsActivityGroup", new { id = item.ID })"
                                 onclick="return confirm('ต้องการลบรายการนี้?')"
                                 class="btn btn-link">
                                 ลบ
                              </a>
                           }
                        </div>
                     </div>

                  </div> <!-- .history-table-container -->
                  i++;
               }
            </div>
         </div>
      </div><!-- .container -->
   </div>
</div>

@section scripts{
   <script>
      $(document).ready(function () {
         $('main').addClass('profile-main');
      });

   </script>
}

